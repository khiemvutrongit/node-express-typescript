{
  "name": "ohana",
  "version": "1.0.0",
  "description": "",
  "author": "KV",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "node -r ts-node/register --inspect server.ts",
    "copyfile": "node copyfile",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "clean": "cd .. && rm -rf dist && mkdir dist",
    "test-dist": "cd ../dist && npm run test && cd ../src",
    "build": "npm run clean && npm run copyfile && tsc && cd ../dist && npm i --no-fund && cd ../src",
    "dev:nodemon": "nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "**/*"
    ],
    "exec": "npm run dev",
    "ext": "ts"
  },
  "dependencies": {
    "add": "^2.0.6",
    "axios": "^0.24.0",
    "base-64": "^1.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "global": "^4.4.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@types/eslint": "^6.8.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^24.9.1",
    "copyfiles": "^2.4.1",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.10",
    "webpack-node-externals": "^1.7.2"
  }
}
