{   
    "ts-node": {
        "transpileOnly": true
    },
    "exclude": [
        "jest.config.ts",
        "node_modules"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "types": ["node", "jest"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "../dist",
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    }
}